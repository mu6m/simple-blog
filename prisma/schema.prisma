generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model post {
  id          String @id @unique @default(cuid())
  slug        String @unique
  title       String @unique
  content     String @db.Text
  description String

  thumbnail String

  published Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
